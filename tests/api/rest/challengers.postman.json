{
	"info": {
		"name": "RPSLS Challengers API",
		"description": "Test collection for RPSLS Challengers API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://192.168.64.153:30080"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response time is less than 2000ms', function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": ["{{baseUrl}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Get Swagger UI",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains Swagger', function () {",
							"    pm.expect(pm.response.text()).to.include('swagger');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/swagger",
					"host": ["{{baseUrl}}"],
					"path": ["swagger"]
				}
			}
		},
		{
			"name": "Root Redirect to Swagger",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 302 or 200', function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 302]);",
							"});",
							"",
							"pm.test('Response time is less than 1000ms', function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/",
					"host": ["{{baseUrl}}"],
					"path": [""]
				}
			}
		},
		{
			"name": "API Availability Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('API is reachable', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Content-Type is correct', function () {",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include('text/html');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/swagger/index.html",
					"host": ["{{baseUrl}}"],
					"path": ["swagger", "index.html"]
				}
			}
		}
	]
}
